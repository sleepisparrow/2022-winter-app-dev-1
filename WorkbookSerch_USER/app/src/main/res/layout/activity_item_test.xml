<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".item_test">
    <Button
            android:text="시험 이름"
            android:textSize="18sp"
            android:layout_width="371dp"
            android:layout_height="48dp" android:id="@+id/test_name_text" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="마지막 응시 : "
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/date_last_apply_text"
            app:layout_constraintStart_toStartOf="@+id/test_name_text" android:layout_marginStart="0dp"
            app:layout_constraintTop_toBottomOf="@+id/test_name_text" android:layout_marginTop="0dp"/>
    <TextView
            android:text="점수 : "
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/score_text"
            app:layout_constraintTop_toBottomOf="@+id/test_name_text"
            app:layout_constraintEnd_toEndOf="@+id/test_name_text"
            android:layout_marginEnd="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>