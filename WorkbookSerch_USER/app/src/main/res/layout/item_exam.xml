<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="시험 이름"
            android:layout_width="408dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:background="@drawable/rectangular_exam"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/testname_text" card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent" card_view:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="마지막응시: 2022-12-23"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/last_apply_exam_text"
            card_view:layout_constraintTop_toBottomOf="@+id/testname_text"
            card_view:layout_constraintStart_toStartOf="@+id/testname_text"/>
    <TextView
            android:text="점수 : 89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/score_info_text"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp" card_view:layout_constraintTop_toBottomOf="@+id/testname_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>
