<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/workbookCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fffce4"
>

    <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/problem"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="No."
                    android:textSize="17sp"
                    android:textStyle="bold"/>
            <TextView
                    android:text="n"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/problemNum"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
            <TextView
                    android:text="problem"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/problemTitle"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
        </LinearLayout>
        <TextView
                android:text="TextView"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/black"
                android:layout_width="364dp"
                android:layout_height="wrap_content" android:id="@+id/problemText"/>
        <View
                android:background="#988C8C"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:id="@+id/view2"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>