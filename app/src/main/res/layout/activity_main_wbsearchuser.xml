<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivityWbSearchUser">

    <TextView
            android:text="이수호"
            android:textColor="@color/white"
            android:layout_width="78dp"
            android:layout_height="37dp" android:id="@+id/user_group"
            android:gravity="center"
            android:background="@drawable/btn_round"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/user_group3"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/user_group3" app:layout_constraintHorizontal_bias="0.013"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="23.01.17\n야간간호반"
            android:textColor="@color/white"
            android:layout_width="78dp"
            android:layout_height="37dp" android:id="@+id/user_group3"
            android:gravity="center"
            android:background="@drawable/btn_round"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintVertical_bias="0.022"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="386dp"
            android:layout_height="65dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_group" android:layout_marginTop="12dp"
            android:id="@+id/linearLayout" app:layout_constraintEnd_toEndOf="@+id/LinearLayout">
        <EditText
                android:layout_width="257dp"
                android:layout_height="49dp"
                android:inputType="text"
                android:hint="문제집을 입력하세요"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:textSize="14sp"
                android:gravity="center"
                android:ems="10"
                android:id="@+id/search_name"
        />
        <Button
                android:text="검색"
                android:onClick="search"
                android:id="@+id/search_btn"
                android:backgroundTint="#31B01C"
                android:textSize="13sp"
                android:layout_width="62dp"
                android:layout_height="49dp"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="406dp"
            android:layout_height="588dp"
            android:background="@drawable/rectangular_round2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.898"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/LinearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <TextView
                android:layout_marginStart="5dp"
                android:text="응시하지 않은 시험"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_width="394dp"
                android:layout_height="wrap_content" android:id="@+id/exam_unapplied"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="center"
                android:layout_width="369dp"
                android:layout_height="235dp"
                android:id="@+id/recycler_view_unapply"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>
        <TextView
                android:layout_marginStart="5dp"
                android:text="응시한 시험"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_width="394dp"
                android:layout_height="wrap_content" android:id="@+id/exam_applied"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="center"
                android:layout_width="368dp"
                android:layout_height="235dp"
                android:id="@+id/recycler_view_apply"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>