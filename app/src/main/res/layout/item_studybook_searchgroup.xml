<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <LinearLayout
            android:background="@drawable/rectangular"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="294dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/studybookName"
                    android:textColor="@color/black"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="studybookName"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp">
                <TextView
                        android:textColor="@color/black"
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="응시인원 : "/>
                <TextView
                        android:id="@+id/personNum"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="personNum"/>
                <TextView
                        android:id="@+id/text2"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"/>
                <TextView
                        android:textColor="@color/black"
                        android:id="@+id/totalNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="totalNum"/>
                <Space
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <Button
                android:text="문제집 수정"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangular_round2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/eidtWorkbook"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>