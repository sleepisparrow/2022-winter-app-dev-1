<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_activity">

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="25dp"

        android:textSize="30sp"
        android:textStyle="bold"
        android:text="회원가입"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_input"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/login_text"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toStartOf="@+id/input_name"
            app:layout_constraintTop_toTopOf="@+id/input_name"
            app:layout_constraintBottom_toBottomOf="@id/input_name"

            android:textSize="15sp"
            android:text="name: " />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:autofillHints="이름"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/name_error_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"

            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"

            android:text="잘못된 이름입니다. 다시 입력하세요"
            android:textColor="#f00"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@id/input_name"
            app:layout_constraintTop_toBottomOf="@id/input_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toStartOf="@+id/input_id"
            app:layout_constraintTop_toTopOf="@+id/input_id"
            app:layout_constraintBottom_toBottomOf="@id/input_id"

            android:textSize="15sp"
            android:text="ID: " />


        <EditText
            android:id="@+id/input_id"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:autofillHints="id"
            android:inputType="text"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_error_text" />

        <TextView
            android:id="@+id/id_error_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"

            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"

            android:text="ID가 이미 있습니다."
            android:textColor="#f00"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@id/input_id"
            app:layout_constraintTop_toBottomOf="@id/input_id" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toStartOf="@+id/input_pw"
            app:layout_constraintTop_toTopOf="@+id/input_pw"
            app:layout_constraintBottom_toBottomOf="@id/input_pw"

            android:textSize="15sp"
            android:text="PW: " />

        <EditText
            android:id="@+id/input_pw"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:autofillHints="password"
            android:inputType="textPassword"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_error_text" />


        <TextView
            android:id="@+id/pw_error_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"

            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"

            android:text="비밀번호는 필수 사항입니다."
            android:textColor="#f00"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@id/input_pw"
            app:layout_constraintTop_toBottomOf="@id/input_pw" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toStartOf="@+id/input_pw_check"
            app:layout_constraintTop_toTopOf="@+id/input_pw_check"
            app:layout_constraintBottom_toBottomOf="@id/input_pw_check"

            android:textSize="15sp"
            android:text="PW 다시입력: " />

        <EditText
            android:id="@+id/input_pw_check"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:autofillHints="password"
            android:inputType="textPassword"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pw_error_text" />


        <TextView
            android:id="@+id/pw_check_error_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/input_pw_check"
            app:layout_constraintStart_toStartOf="@id/input_pw_check"
            app:layout_constraintEnd_toEndOf="parent"

            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="비어있거나 비밀번호와 일치하지 않습니다."
            android:textColor="#f00"
            android:textSize="15sp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/register_button"
        
        app:layout_constraintTop_toBottomOf="@+id/constraint_input"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.33"
        
        android:layout_marginTop="15dp"
        android:layout_width="110dp"
        android:layout_height="40dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/light_green">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="회원가입"
            />
    </androidx.cardview.widget.CardView>
    
</androidx.constraintlayout.widget.ConstraintLayout>