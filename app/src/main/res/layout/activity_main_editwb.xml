<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivityEditWb">
    <TextView
            android:text="회원가입 수락\nn명 대기중"
            android:textColor="@color/white"
            android:layout_width="78dp"
            android:layout_height="37dp" android:id="@+id/user_group5"
            android:gravity="center"
            android:background="@drawable/btn_round"
            android:textSize="10sp"
            android:onClick="Singup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.645"
            app:layout_constraintVertical_bias="0.023"/>
    <TextView
            android:text="이수호"
            android:textColor="@color/white"
            android:layout_width="78dp"
            android:layout_height="37dp" android:id="@+id/user_group6"
            android:gravity="center"
            android:background="@drawable/btn_round"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.023" app:layout_constraintEnd_toStartOf="@+id/user_group5"
            app:layout_constraintStart_toEndOf="@+id/user_group3" app:layout_constraintHorizontal_bias="0.522"/>
    <TextView
            android:text="원장"
            android:textColor="@color/white"
            android:layout_width="78dp"
            android:layout_height="37dp" android:id="@+id/user_group3"
            android:gravity="center"
            android:background="@drawable/btn_round"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintVertical_bias="0.022"/>
    <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:background="@color/white"
            android:layout_height="26dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/user_group5"
            app:layout_constraintStart_toEndOf="@+id/user_group5" android:layout_marginStart="56dp"
            app:layout_constraintVertical_bias="0.592" android:id="@+id/tabBarCardView">
        <LinearLayout
                android:id="@+id/tabBar"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="30dp"
                android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="0dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.91" app:layout_constraintBottom_toBottomOf="@+id/user_group5">
            <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp" android:id="@+id/view"
                    android:background="#000000"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp" android:id="@+id/view4"
                    android:layout_marginTop="6dp"
                    android:background="#000000"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp" android:id="@+id/view5"
                    android:layout_marginTop="6dp"
                    android:background="#000000"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
            android:text="  문제집 수정"
            android:textSize="17sp"
            android:gravity="left|center"
            android:background="@drawable/btn_round"
            android:layout_width="131dp"
            android:layout_height="43dp" android:id="@+id/EditWorkbook"
            app:layout_constraintStart_toStartOf="@+id/user_group3"
            app:layout_constraintTop_toBottomOf="@+id/user_group3" android:layout_marginTop="16dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="411dp"
            android:layout_height="620dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditWorkbook" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="412dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp" android:id="@+id/linearLayout">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="373dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="0dp" android:layout_marginStart="0dp">
                <TextView
                        android:text="문제집 이름 변경:"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:layout_width="123dp"
                        android:layout_height="wrap_content" android:id="@+id/textView2"/>
                <EditText
                        android:layout_width="231dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="text"
                        android:hint="(기존 문제집 이름)"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textColorHint="#988C8C"
                        android:backgroundTint="@color/black"
                        android:ems="10"
                        android:id="@+id/workbookName"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="373dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="0dp" android:layout_marginStart="0dp">
                <TextView
                        android:text="공개 분반 설정 변경:"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:layout_width="123dp"
                        android:layout_height="wrap_content" android:id="@+id/textView3"/>
                <EditText
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="text"
                        android:hint="(기존 공개 분반)"
                        android:textColorHint="#988C8C"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/black"
                        android:ems="10"
                        android:id="@+id/openGroup"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="373dp"
                    android:layout_height="36dp">
                <TextView
                        android:text="응시 정원 변경:"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:layout_width="123dp"
                        android:layout_height="wrap_content" android:id="@+id/textView4"/>
                <EditText
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="text"
                        android:hint="(기존 응시 정원)"
                        android:textColorHint="#988C8C"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/black"
                        android:ems="10"
                        android:id="@+id/capacityNum"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/rectangular_round2"
                android:layout_width="match_parent"
                android:layout_height="378dp"
                android:id="@+id/linearLayout2">
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_gravity="center"
                    android:layout_width="399dp"
                    android:layout_height="match_parent"
                    android:id="@+id/workbook_recyclerview"
                    android:layout_marginTop="0dp"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="취소"
                    android:onClick="CancelClick"
                    android:background="@drawable/btn_round"
                    android:layout_width="109dp"
                    android:layout_height="52dp" android:id="@+id/cancel"
                    android:layout_marginStart="60dp" android:layout_marginBottom="36dp"
            />
            <Button
                    android:text="완료"
                    android:onClick="CompletionClick"
                    android:background="@drawable/btn_round"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content" android:id="@+id/completion"
                    android:layout_marginBottom="36dp"
                    android:layout_marginStart="88dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>