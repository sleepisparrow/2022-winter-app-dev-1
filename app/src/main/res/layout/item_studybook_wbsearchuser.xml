<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/TestCardView">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/rectangular"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangular"
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/workbookName"
                    android:textColor="@color/black"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="workbookName"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp">
                <TextView
                        android:textColor="@color/black"
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마지막응시 : "/>
                <TextView
                        android:id="@+id/lastDate"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(미응시)"/>
                <Space
                        android:layout_width="83dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="점수 : "
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"/>
                <TextView
                        android:text="-- --"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/score" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>