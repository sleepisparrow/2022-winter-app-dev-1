<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/rectangular"

        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_marginStart="5dp"
                android:background="@drawable/rectangular"
                android:orientation="vertical"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
        >
            <TextView
                    android:text="userName"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <!--        수정 사항 : 아래의 텍스트들은 회색으로 칠하기 -->
            <TextView
                    android:text="userGroup"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/userGroup"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="첫 수업: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView1"/>
                <TextView
                        android:text="22.12.28"
                        android:textSize="15sp" android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/firstClass"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="ID: " android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView2"/>
                <TextView
                        android:text="userID" android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/userID"/>
            </LinearLayout>
        </LinearLayout>
        <Button
                android:text="정보 확인"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:background="@drawable/rectangular_round2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkUserInfo"
                card_view:layout_constraintStart_toEndOf="@+id/card_view"
                android:layout_marginStart="0dp"
        />
    </LinearLayout>
    <View
            android:background="#BDBCBC"
            android:layout_width="378dp"
            android:layout_height="2dp" android:id="@+id/view"/>
</LinearLayout>