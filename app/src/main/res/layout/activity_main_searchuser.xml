<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="회원가입 수락\nn명 대기중"
            android:textColor="@color/white"
            android:layout_width="78dp"
            android:layout_height="37dp" android:id="@+id/user_group5"
            android:gravity="center"
            android:background="@drawable/btn_round"
            android:textSize="10sp"
            android:onClick="Singup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.645"
            app:layout_constraintVertical_bias="0.023"/>
    <TextView
            android:text="이수호"
            android:textColor="@color/white"
            android:layout_width="78dp"
            android:layout_height="37dp" android:id="@+id/user_group6"
            android:gravity="center"
            android:background="@drawable/btn_round"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.023" app:layout_constraintEnd_toStartOf="@+id/user_group5"
            app:layout_constraintStart_toEndOf="@+id/user_group3" app:layout_constraintHorizontal_bias="0.522"/>
    <TextView
            android:text="원장"
            android:textColor="@color/white"
            android:layout_width="78dp"
            android:layout_height="37dp" android:id="@+id/user_group3"
            android:gravity="center"
            android:background="@drawable/btn_round"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintVertical_bias="0.022"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="410dp"
            android:layout_height="653dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.898" app:layout_constraintTop_toBottomOf="@+id/user_group6"
            android:layout_marginTop="50dp">
        <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="414dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

            <Button
                    android:text="▼사용자명"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:layout_width="70dp"
                    android:layout_height="31dp" android:id="@+id/btnDialog"/>
            <EditText
                    android:layout_width="257dp"
                    android:layout_height="49dp"
                    android:inputType="text"
                    android:hint="검색하려는 이용자를 입력하세요"
                    android:backgroundTint="@color/black"
                    android:textColorHint="#988C8C"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:ems="10"
                    android:id="@+id/search_name"
            />
            <Button
                    android:text="검색"
                    android:onClick="Search"
                    android:backgroundTint="#31B01C"
                    android:textSize="13sp"
                    android:layout_width="62dp"
                    android:layout_height="49dp" android:id="@+id/search_btn"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/rectangular_round2"
                android:layout_width="412dp"
                android:layout_height="586dp"
                android:id="@+id/linearLayout2"
        >
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_gravity="center"
                    android:layout_width="400dp"
                    android:layout_height="576dp"
                    android:id="@+id/user_recyclerview"
                    android:layout_marginTop="3dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
