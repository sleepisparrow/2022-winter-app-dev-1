<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".Main.MainActivitySearchGroup">
    <EditText
            android:layout_width="257dp"
            android:layout_height="49dp"
            android:inputType="text"
            android:hint="문제집을 입력하세요"
            android:textColorHint="#988C8C"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/search_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.093" app:layout_constraintHorizontal_bias="0.357"/>
    <Button
            android:text="검색"
            android:onClick="Search"
            android:backgroundTint="#31B01C"
            android:textSize="13sp"
            android:layout_width="62dp"
            android:layout_height="49dp" android:id="@+id/serch_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.893"
            app:layout_constraintVertical_bias="0.093"/>
    <TextView
            android:text="원장"
            android:textColor="@color/white"
            android:layout_width="78dp"
            android:layout_height="37dp" android:id="@+id/user_group"
            android:gravity="center"
            android:background="@drawable/rectangular_present_user_info"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintVertical_bias="0.022"/>
    <TextView
            android:text="이수호"
            android:textColor="@color/white"
            android:layout_width="78dp"
            android:layout_height="37dp" android:id="@+id/user_group2"
            android:gravity="center"
            android:background="@drawable/rectangular_present_user_info"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.023" app:layout_constraintEnd_toStartOf="@+id/user_group3"
            app:layout_constraintStart_toEndOf="@+id/user_group"/>
    <TextView
            android:text="회원가입 수락\nn명 대기중"
            android:textColor="@color/white"
            android:layout_width="78dp"
            android:layout_height="37dp" android:id="@+id/user_group3"
            android:gravity="center"
            android:background="@drawable/rectangular_present_user_info"
            android:textSize="10sp"
            android:onClick="Singup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.645"
            app:layout_constraintVertical_bias="0.023"/>
    <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/rectangular_round2"
            android:layout_width="398dp"
            android:layout_height="610dp"
            app:layout_constraintTop_toBottomOf="@+id/search_name" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="213dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/linearLayout" android:layout_marginStart="16dp" android:layout_marginTop="4dp">

                <!--        수정 사항 : 아래의 텍스트들은 회색으로 칠하기 -->
                <TextView
                        android:text="주간 A반"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:id="@+id/group_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="학생: 25명"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/student_num_Info"
                />
                <TextView
                        android:text="간호 A반"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/group_detail_info"/>
                <TextView
                        android:text="첫 수업: 22.12.28"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/first_date"/>
            </LinearLayout>
            <Button
                    android:text="랭킹 확인"
                    android:onClick="Ranking"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/black"
                    android:background="@drawable/rectangular_round2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout" android:layout_marginStart="48dp"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout" android:layout_marginBottom="28dp"
                    android:layout_gravity="center"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="13dp" android:layout_weight="0.4"/>
            <Button
                    android:text="학생 관리"
                    android:onClick="StudentManagement"
                    android:background="@drawable/rectangular_round"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/student_management" android:layout_weight="1"/>
            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" android:id="@+id/view"
                    android:background="@color/black"
            />
            <Button
                    android:text="그룹 수정"
                    android:onClick="EditGroup"
                    android:background="@drawable/rectangular_round"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/edit_group" android:layout_weight="1"/>
            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" android:id="@+id/view2"
                    android:background="@color/black"/>
            <Button
                    android:text="그룹 삭제"
                    android:onClick="DeletGroup"
                    android:background="@drawable/rectangular_round"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/delete_group" android:layout_weight="1"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="13dp" android:layout_weight="0.4"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp" android:id="@+id/view3" android:background="@color/black"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="center"
                android:layout_width="383dp"
                android:layout_height="444dp"
                android:id="@+id/workbook_recyclerview"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>